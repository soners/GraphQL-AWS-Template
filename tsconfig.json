{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "node_modules/@types"
  ]
}
